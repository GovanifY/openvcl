///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Line::Line( const File& file, unsigned int number, unsigned int originalNumber, const std::string& content ) : m_file(file), m_number(number), m_originalNumber(originalNumber), m_content(content)
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Line::Line( const Line& l ) : m_file(l.m_file)
{
	m_number = l.m_number;
	m_originalNumber = l.m_originalNumber;
	m_content = l.m_content;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline unsigned int Line::number() const
{
	return m_number;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline unsigned int Line::originalNumber() const
{
	return m_originalNumber;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline const std::string& Line::content() const
{
	return m_content;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline const File& Line::file() const
{
	return m_file;
}

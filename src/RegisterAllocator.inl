inline RegisterAllocator::State RegisterAllocator::state() const
{
	return m_currState;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void RegisterAllocator::setState( State state )
{
	m_currState = state;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline const std::string& RegisterAllocator::name()
{
	return m_name;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void RegisterAllocator::setDynamicThreshold( unsigned int threshold )
{
	m_dynamicThreshold = threshold;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline const Register* RegisterAllocator::floatRegister( unsigned int regNumber ) const
{
	assert( regNumber < 32 );

	return &m_floats[ regNumber ];
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline const Register* RegisterAllocator::integerRegister( unsigned int regNumber ) const
{
	assert( regNumber < 16 );

	return &m_integers[ regNumber ];
}
